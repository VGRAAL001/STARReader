@using Microsoft.AspNetCore.Identity
@using BlazorApp.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blazor Navigation</title>

    <!-- Add the CSS styling directly in the <head> -->
    <style>
        .navbar-nav {
            background-color: blue; /* Blue background for the navigation */
            padding: 10px; /* Adds padding to the navigation */
        }

        .nav-link {
            color: white; /* White text for the links */
        }

        .nav-item {
            list-style-type: none;
            display: inline-block;
            margin-right: 15px; /* Add space between nav items */
        }

        .btn-link {
            color: white; /* Ensure buttons have white text */
        }

        .border-0 {
            border: none; /* Remove border from the button */
        }
    </style>
</head>
<body>
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link border-0">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
</body>
</html>
